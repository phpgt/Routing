{
	"name": "phpgt/routing",
	"description": "Routes HTTP requests to your code.",
	"type": "library",

	"require": {
		"php": ">=8.1",
		"phpgt/typesafegetter": "^1.2.2",
		"phpgt/config": "^1.1.0",
		"phpgt/http": "^1",
		"phpgt/servicecontainer": "1.*",
		"psr/http-message": "^2",

		"willdurand/negotiation": "^3.0"
	},

	"require-dev": {
		"phpstan/phpstan": "^1.10",
		"phpunit/phpunit": "^10.2",
		"phpmd/phpmd": "^2.13",
		"squizlabs/php_codesniffer": "^3.7 || ^4.0"
	},

	"license": "MIT",

	"authors": [
		{
			"name": "Greg Bowler",
			"homepage": "https://www.g105b.com",
			"email": "greg.bowler@g105b.com",
			"role": "Developer"
		}
	],

	"autoload": {
		"psr-4": {
			"Gt\\Routing\\": "./src"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Gt\\Routing\\Test\\": "./test/phpunit"
		}
	},
	"keywords": [
		"router",
		"route",
		"uri",
		"url",
		"request",
		"redirect",
		"assembly",
		"view",
		"logic"
	],
	"funding": [
		{
			"type": "github",
			"url": "https://github.com/sponsors/PhpGt"
